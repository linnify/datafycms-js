{
  "name": "@datafycms/js-client",
  "version": "1.0.3",
  "description": "API Client for DatafyCMS",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "private": false,
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "test": "jest",
    "codecov": "./node_modules/.bin/codecov",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "prepublish": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "lint-staged": "lint-staged --relative",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linnify/datafycms-js.git"
  },
  "keywords": [
    "nodejs",
    "cms",
    "datafycms",
    "headlesscms"
  ],
  "author": "DatafyCMS",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/linnify/datafycms-js/issues"
  },
  "engines": {
    "node": "^8.13.0 || >=10.10.0"
  },
  "homepage": "https://github.com/linnify/datafycms-js#readme",
  "dependencies": {
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "codecov": "^3.8.1",
    "eslint": "^7.22.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "files": [
    "lib/**/*"
  ],
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "eslint"
    ]
  }
}
